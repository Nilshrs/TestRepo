<div class="container">

    <div class="container">
        <div class="row mb-1 text-decoration-none">
            <a class= "text-white text-decoration-none " href="/livePrices">❮</a>
        </div>
        <div class="row">
            <div class="col-7">
                <h1>Watchlist </h1>
            </div>
            <div class="col d-none d-md-block">
                <a class = "text-white text-decoration-none btn " id = "defi-button" href="/watchlist/add"> ADD TOKEN</a>
            </div>

            <div class="row d-md-none d-sm-block my-2">
                <a class = "text-white text-decoration-none btn " id = "defi-button-mobile" href="/watchlist/add"> ADD TOKEN</a>
            </div>
        </div>


        <div class="table-responsive">
            <table id="tb" class="table table-striped table-dark">
                <thead>
                <tr class="info">
                    <th>Token</th>
                    <th>Currency</th>
                    <th>Price</th>
                    <th>Remove</th>
                </tr>
                </thead>
                <tbody>
                <% if (tokenData) { %>
                    <% tokenData.forEach((token) => { %>
                        <tr>
                            <td>
                                <%= token.name ;%>
                            </td>
                            <td>
                                <%= token.currency ;%>
                            </td>
                            <td>
                                <%= token.price ;%>
                            </td>
                            <td>
                                <a href='/watchlist/remove-token/<%= token.id ;%>' role="button"
                                   class="text-decoration-none"> ➖</a>
                            </td>
                        </tr>
                <% }); } %>
                </tbody>
            </table>
        </div>
        </table>
    </div>
</div>
